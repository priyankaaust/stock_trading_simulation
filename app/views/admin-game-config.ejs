        <div class="game-config-container">
            <!-- Left Section: Game Settings Form -->
            <div class="config-form">
                <h2>Game Settings</h2>
                <form action="/admin/game/config" method="POST">
                    <!-- Each setting field -->
                    <!-- <div class="form-group">
                        <label for="setting-simulation-speed">Simulation Speed:</label>
